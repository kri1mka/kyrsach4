<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Состояние: нажата -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4DB8FF"
                android:endColor="#1E90FF"
                android:angle="90" />
            <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Состояние: обычная -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66C8FF"
                android:endColor="#33B5FF"
                android:angle="90" />
            <corners android:radius="30dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
