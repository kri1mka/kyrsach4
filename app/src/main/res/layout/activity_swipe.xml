<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        tools:ignore="MissingConstraints"
        app:contentInsetStart="10dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/colocol"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:tint="#313B50" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Интересное"
            android:textColor="#313B50"
            android:textSize="18sp"
            android:textStyle="bold"
          />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/more"
            android:layout_marginRight="10dp"
            />
    </androidx.appcompat.widget.Toolbar>





    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/card_stack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/dummyBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/dummyBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Кнопки поверх карточек, чуть выше нижнего края карточки -->
    <LinearLayout
        android:id="@+id/cardButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/dummyBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp"> <!-- регулируем высоту над картой -->

        <!-- DISLIKE -->
        <ImageButton
            android:id="@+id/btnDislike"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_white"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_marginEnd="32dp"/>

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/circle_white"
            android:src="@drawable/heart_filled"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

    </LinearLayout>
    <!-- Нижняя панель (НЕ скроллится) -->

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/icons8_accueil_24" />

        <ImageButton
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/icons8_messages_group_s_24" />

        <ImageButton
            android:id="@+id/nav_heart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/icons8_aime_rempli_24" />

        <ImageButton
            android:id="@+id/nav_translate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/icons8_google_traduction_24" />

        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/icons8_utilisateur_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
